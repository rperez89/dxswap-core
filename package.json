{
  "name": "@swapr/core",
  "version": "0.3.20",
  "files": [
    "contracts",
    "build",
    ".contracts.json"
  ],
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@ethersproject/providers": "^5.7.2",
    "@matterlabs/hardhat-zksync-chai-matchers": "^0.1.2",
    "@matterlabs/hardhat-zksync-deploy": "^0.6.3",
    "@matterlabs/hardhat-zksync-solc": "^0.3.14",
    "@matterlabs/hardhat-zksync-verify": "^0.1.4",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomiclabs/hardhat-ethers": "^2.2.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v5": "^10.2.0",
    "@typechain/hardhat": "^6.1.5",
    "@types/chai": "^4.3.4",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "arb-ethers-web3-bridge": "^0.7.3",
    "chai": "^4.3.7",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^5.7.2",
    "glob-promise": "^5.0.1",
    "hardhat": "^2.13.0",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.25",
    "hardhat-deploy-ethers": "0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.9",
    "mathjs": "^10.6.4",
    "prettier": "^2.8.7",
    "prettier-plugin-solidity": "^1.1.3",
    "rimraf": "^3.0.2",
    "solc": "0.5.16",
    "solhint": "^3.4.1",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.22",
    "ts-node": "10.7.0",
    "typechain": "^8.1.1",
    "typescript": "^4.9.5",
    "zksync-web3": "^0.14.3"
  },
  "scripts": {
    "lint": "yarn prettier ./test/*.ts --check",
    "lint:fix": "yarn prettier ./test/*.ts --write",
    "clean": "rimraf ./build/",
    "precompile": "yarn clean",
    "compile": "hardhat compile",
    "compile:zk": "hardhat compile --network zkSyncTestnet",
    "test": "NODE_ENV=test yarn compile && hardhat test",
    "t": "NODE_ENV=test yarn hardhat test",
    "t:1": "NODE_ENV=test yarn hardhat test test/zkDXswapDeployer.spec.ts",
    "p:1": "NODE_ENV=test pnpm hardhat test test/zkDXswapDeployer.spec.ts",
    "test:coverage": "hardhat coverage",
    "test:gasreport": "GAS_REPORT_ENABLED=true hardhat test",
    "prepublishOnly": "yarn test",
    "build-package": "ts-node scripts/bundler.ts",
    "deploy:mainnet": "hardhat deploy --network mainnet --tags CORE_CONTRACTS",
    "deploy:zkSyncTestnet": "hardhat deploy --network zkSyncTestnet --tags CORE_CONTRACTS",
    "verify:mainnet": "set -a; . ./.env; set +a; npx hardhat --network mainnet etherscan-verify --api-key \"$ETHERSCAN_KEY\"",
    "deploy:gnosis": "hardhat deploy --network gnosis --tags CORE_CONTRACTS",
    "verify:gnosis": "set -a; . ./.env; set +a; npx hardhat --network gnosis etherscan-verify --api-key \"$ETHERSCAN_KEY\"",
    "deploy:rinkeby": "hardhat deploy --network rinkeby --tags CORE_CONTRACTS",
    "verify:rinkeby": "set -a; . ./.env; set +a; npx hardhat --network rinkeby etherscan-verify --api-key \"$ETHERSCAN_KEY\""
  },
  "license": "AGPL-3.0-or-later"
}
